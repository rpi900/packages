# Maintainer: Matthew Hollingworth <matthew@rpi900.com>
pkgname=dnt900
pkgver=0.3.4
pkgrel=2
pkgdesc='DNT900 line discipline module'
arch=('armv6h') # TODO: add others?
url='https://github.com/mholling/dnt900'
license=('GPL')
depends=('linux>=3.10.18')
makedepends=('linux-headers>=3.10.18')
conflicts=('linux-rpi900')
install=dnt900.install
source=(
  "dnt900-${pkgver}.tar.gz::https://github.com/mholling/dnt900/archive/v${pkgver}.tar.gz"
)
md5sums=(
  '75091299a5cb672f47891b20d0fe22b2'
)
build() {
  cd "${srcdir}/dnt900-${pkgver}"
  make
}
package() {
  cd "${srcdir}/dnt900-${pkgver}"
  DESTDIR="${pkgdir}/usr" make modules_install
}
