post_install() {
  systemctl daemon-reload
  udevadm control --reload
  echo ">>> Remember to set the local IP address in /etc/rpi900-ppp.conf"
  echo ">>> Remember to set a password in /etc/ppp/chap-secrets or use noauth"
}
post_upgrade() {
  systemctl daemon-reload
  udevadm control --reload
}
post_remove() {
  systemctl daemon-reload
  udevadm control --reload
}
