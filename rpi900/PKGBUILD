# Maintainer: Matthew Hollingworth <matthew@rpi900.com>
pkgname=rpi900
pkgver=1.0
pkgrel=2
pkgdesc='DNT900 line discipline service for RPi900'
arch=('armv6h')
url='http://rpi900.com'
license=('GPL')
depends=('rpirtscts' 'dnt900')
backup=('etc/rpi900.conf')
install=rpi900.install
source=(
  rpi900.conf
  rpi900.service
  99-rpi900.rules
)
md5sums=(
  'SKIP'
  'SKIP'
  'SKIP'
)
package() {
  mkdir -p "${pkgdir}/etc"
  cp "${srcdir}/rpi900.conf" "${pkgdir}/etc"
  mkdir -p "${pkgdir}/usr/lib/udev/rules.d"
  cp "${srcdir}/99-rpi900.rules" "${pkgdir}/usr/lib/udev/rules.d"
  mkdir -p "${pkgdir}/usr/lib/systemd/system"
  cp "${srcdir}/rpi900.service" "${pkgdir}/usr/lib/systemd/system"
}
