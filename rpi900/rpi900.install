post_install() {
  systemctl daemon-reload
  udevadm control --reload
  systemctl enable rpi900.service
  echo ">>> Remember to set the serial speed in /etc/rpi900.conf"
}
post_upgrade() {
  systemctl daemon-reload
  udevadm control --reload
}
post_remove() {
  systemctl disable rpi900.service
  systemctl daemon-reload
  udevadm control --reload
}
